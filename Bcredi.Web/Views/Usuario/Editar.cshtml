@model SystemOne.Models.Usuario
@{
    ViewBag.Title = "Editar";
}
<div role="form" class="" id="cliente-template">
    @if (@ViewBag.MensagemSucesso != null)
    {
        <div id="divMensagemSucesso" class="alert alert-success">
            @ViewBag.MensagemSucesso
        </div>
    }
    @if (@ViewBag.MensagemAviso != null)
    {
        <div id="divMensagemAviso" class="alert alert-warning">
            @ViewBag.MensagemAviso
        </div>
    }
    @if (@ViewBag.MensagemErro != null)
            {
        <div id="divMensagemErro" class="alert alert-danger">
            @ViewBag.MensagemErro
        </div>
    }
    <div class="box-padrao">
    <form  role="form" action="/Usuario/Editar/" method="post">
        <div>
            <div class="text-center">
                <h2>Editar - @Model.Nome</h2>
                <br />
            </div>
            <div class="row">
                <!--/Mudar label-->
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Id, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Nome, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Login, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.IsAtivo, new { @class = "control-label" })
                    <br />
                    @if (Model.IsAtivo)
                    {
                    <span class="glyphicon glyphicon-thumbs-up" />
                    <button type="submit" class="btn btn-default">Desativar</button>
                    <div hidden="hidden">
                        @Html.LabelFor(m => m.IsAtivo, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.IsAtivo, new { @class = "form-control" })
                        <input type="text" id="txtIsAtivo" name="txtIsAtivo" value="@Model.IsAtivo">
                        @Html.TextBoxFor(m => m.Id)
                        <input type="text" id="txtIsAtivo" name="txtIsAtivo" value="@Model.IsAtivo">
                        <input type="text" id="IsAtivo" name="IsAtivo" value="1" class="col-md-1" hidden="hidden" />
                    </div>
                    }
                    else
                    {
                    <span class="glyphicon glyphicon-thumbs-down" />
                    <button type="submit" class="btn btn-default">Ativar</button>
                    <div class="col-md-9" hidden="hidden">
                        <input type="text" id="IsAtivo" name="IsAtivo" value="0" class="" hidden="hidden" />
                    </div>
                    }
                </div>
                <div class="col-md-6">
                    @if (Model.DataCriacao != null && !Model.DataCriacao.ToString().Equals("01/01/0001 00:00:00"))
            {
                    <!--/Mudar label-->
                        <div class="">
                            @if (Model.UsuarioCriador != null)
                            {
                                @Html.LabelFor(m => m.UsuarioCriador, new { @class = "control-label" })
                                <br />
                                @Html.TextBoxFor(m => m.UsuarioCriador.UsuarioCriador, new { @class = "form-control", @disabled = "disabled" })
                            }
                            else
                            {
                                @Html.LabelFor(m => m.UsuarioCriador, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.UsuarioCriador.UsuarioCriador, new { @class = "form-control", @disabled = "disabled" })
                            }
                        </div>
                        <div class="">
                            @Html.LabelFor(m => m.DataCriacao, new { @class = "control-label" })
                            <br />
                        </div>
                        <div class="">
                            @if (Model.DataCriacao != null && !Model.DataCriacao.ToString().Equals("01/01/0001 00:00:00"))
                            {
                                @Html.TextBoxFor(m => m.DataCriacao, new { @class = "form-control", @disabled = "disabled" })
                            }
                        </div>
                    }

                    @if (Model.DataAtualizacao != null && !Model.DataAtualizacao.ToString().Equals("01/01/0001 00:00:00"))
            {
                    <!--/Mudar label-->
                        <div class="">
                            @Html.LabelFor(m => m.UsuarioAtualizador, new { @class = "control-label", @disabled = "disabled" })
                        </div>
                        <div class="">
                            @Html.TextBoxFor(m => m.UsuarioAtualizador, new { @class = "form-control", @disabled = "disabled" })
                        </div>
                    <!--/Mudar label-->
                        <div class="">
                            @Html.LabelFor(m => m.DataAtualizacao, new { @class = "control-label", @disabled = "disabled" })
                        </div>
                        <div class="">
                            @Html.TextBoxFor(m => m.DataAtualizacao, new { @class = "form-control", @disabled = "disabled" })
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Salvar</button>
            <button type="button" class="btn btn-default" onClick="window.location.href='/Usuario/Listar'">Voltar</button>
            <button type="submit" class="btn btn-default">Limpar Senha</button>
        </div>
    </form>
    </div>
</div>