@using Bcredi.DAO.Models
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <!-- Favicon -->
    <link href="~/Content/img/favicon.png" rel="shortcut icon" type="image/x-icon" />
    <!-- Bootstrap -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Layout -->
    
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/fileinput")
    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src = "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js" ></ script >
          <script src= "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" ></ script >
        <![endif]-->
</head>
<body>

    <header>
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="" title="Bcredi"><img src="~/Content/img/logo-barra.png" alt="Bcredi"></a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <!-- Menu normal-->
                    @*@using (Html.BeginForm("GetUsuarioHeader", "Bcredi", FormMethod.Get, new { id = "fomUser", @class = "" }))
                        {*@
                    <ul class="nav navbar-nav navbar-right hidden-xs">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <img src="~/Content/img/user-empty.png" class="img-circle mr-7 borda-cinza">
                                @{
                                    if (Core.UsuarioAtual != null)
                                    {
                                        @Core.UsuarioAtual.Nome
                                    }
                                }
                                
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="linha-menu hidden"><a href="/DadosComplementares/DadosComplementares/">Meu Perfil</a></li>
                                <li><a href="/Usuario/AlterarSenha/"> Configurações </a></li>
                            </ul>
                        </li>
                        @if (Core.UsuarioAtual != null && Core.UsuarioAtual.Id > 0)
                        {
                            using (Html.BeginForm("Logout", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()
                                <li class="logout-barra"><a href="/Login/Logout"><i class="fa fa-sign-out" aria-hidden="true" title="Sair"></i></a></li>
                            }
                        }

                    </ul>
                    @* } *@

                </div>
            </div>
            <div class="container hidden-xs">
                <ul class="pull-left menu-navegacao">
                    <li><a href="/Usuario/AssinaturaDigital" class="campoFocoInicial" id="linkMinhaPropostaCredito" name="linkMinhaPropostaCredito"> Minha proposta de crédito</a></li>
                    <li><a href="/DadosPessoais/DadosPessoais" id="linkMinhasInformacoes" name="linkMinhasInformacoes"> Minhas informações</a></li>
                </ul>
                <ul class="pull-right menu-auxilio">
                    <li><a href="javascript:void($zopim.livechat.window.show())" class="valign-center btnChat tags-ga" data-categoria="header" data-acao="clique"><span>Chat</span> <i class="material-icons"></i></a></li>
                    <li><a href="/Mensagem/Mensagem">Mensagem</a></li>
                    <li class="hidden"><a href="/Usuario/Faq"><i class="fa fa-question-circle" aria-hidden="true"></i>FAQ</a></li>
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()
    <footer>
        <div class="container">
            <div class="logo pull-left"><img src="~/Content/img/logo-rodape.png" alt="Bcredi"></div>
            <div class="info pull-right">
                <p>© 2017 - Bcredi Seu Crédito Descomplicado</p>
                <ul class="info-contato">
                    <li><i class="fa fa-phone" aria-hidden="true"></i> 4007-2888</li>
                    <li class="hidden"><a href="javascript:void($zopim.livechat.window.show())" class="valign-center btnChat tags-ga" data-categoria="header" data-acao="clique"> <i class="fa fa-commenting"></i> Chat</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <!-- JavaScript plugins-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


</body>
</html>